		"@types/firefox-webext-browser": "^120.0.4",
		"@types/fs-extra": "^11.0.4",
		"adm-zip": "^0.5.16",
		"eslint": "^9.10.0",
		"eslint-config-prettier": "^9.1.0",
		"fs-extra": "^11.2.0",
		"globals": "^15.9.0",
		"html-validate": "^8.22.0",
		"nano-spawn": "^0.1.0",
		"prettier": "^3.3.3",
		"stylelint": "^16.9.0",
		"stylelint-config-standard": "^36.0.1",
		"tiny-glob": "^0.2.9",
